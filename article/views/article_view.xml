<?xml version="1.0" ?>
<odoo>
    <record id="view_article_form" model="ir.ui.view">
        <field name="name"> Article: add Is Available? field</field>
        <field name="model">article</field>
        <field name="inherit_id" ref="mon_module.view_article_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='isbn']" position="after">
                <field name="is_available" string="Is Available?"/>
            </xpath>
        </field>
    </record>
</odoo>