<?xml version="1.0" ?>
<odoo>
    <record id="module_article_category" model="ir.model.category">
        <field name="name">Shop</field>
    </record>

    <record id="shop_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_article_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="shop_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_article_category"/>
        <field name="implied_ids" eval="[(4, ref('shop_group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))], [(4, ref('base.user_root'))]"/>
    </record>
</odoo>