<?xml version="1.0" ?>
<odoo>
    <record id="view_category_form" model="ir.ui.view">
        <field name="name">Category Form</field>
        <field name="model">article.category</field>
        <field name="arch" type="xml">
            <form string="Category">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="parent_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_category_list" model="ir.ui.view">
        <field name="name">Article category List</field>
        <field name="model">article.category</field>
        <field name="arch" type="xml">
            <list string="Categories">
                <field name="name"/>
                <field name="parent_id" />
            </list>
        </field>
    </record>

    <record id="view_category_search" model="ir.ui.view">
        <field name="name">Article category search</field>
        <field name="model">article.category</field>
        <field name="arch" type="xml">
            <search string="Search article categories">
                <field name="name"/>
            </search>
        </field>
    </record>
</odoo>