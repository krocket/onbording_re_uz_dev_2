<?xml version="1.0" ?>
<odoo>
    <record id="view_article_form" model="ir.ui.view">
        <field name="name">Article Form</field>
        <field name="model">article</field>
        <field name="arch" type="xml">
            <form string="Article">
                <header>
                    <button name="button_check_isbn" type="object" string="Check ISBN"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <separator string="Main Information"/>
                            <field name="name"/>
                            <field name="price"/>
                            <field name="description"/>
                            <field name="category_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <separator string="Additional Information"/>
                            <field name="suppliers_ids" widget="many2many_tags"/>
                            <field name="active"/>
                            <field name="isbn" placeholder="Enter ISBN"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_article_list" model="ir.ui.view">
        <field name="name">Article List</field>
        <field name="model">article</field>
        <field name="arch" type="xml">
            <list string="Articles">
                <field name="name"/>
                <field name="active"/>
                <field name="price"/>
                <field name="suppliers_ids" widget="many2many_tags"/>
                <field name="description"/>
                <field name="category_ids" widget="many2many_tags"/>
                <field name="isbn"/>
            </list>
        </field>
    </record>

    <record id="view_article_search" model="ir.ui.view">
        <field name="name">Article Search</field>
        <field name="model">article</field>
        <field name="arch" type="xml">
            <search string="Search Articles">
                <field name="name"/>
                <field name="price"/>
                <field name="active"/>
                <field name="suppliers_ids" />
                <field name="description"/>
                <field name="category_ids" />
                <field name="isbn" string="ISBN"/>
            </search>
        </field>
    </record>
</odoo>